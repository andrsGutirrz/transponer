<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginTransponer</servlet-name>
        <servlet-class>una.cr.transponer.controller.LoginTransponer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Direccionamiento</servlet-name>
        <servlet-class>una.cr.transponer.controller.Direccionamiento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logica</servlet-name>
        <servlet-class>una.cr.transponer.controller.Logica</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginTransponer</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Direccionamiento</servlet-name>
        <url-pattern>/Direccionamiento</url-pattern>
        <url-pattern>/consultar</url-pattern>
        <url-pattern>/transponer</url-pattern>
        <url-pattern>/index</url-pattern>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logica</servlet-name>
        <url-pattern>/Logica</url-pattern>
        <url-pattern>/make-transponer</url-pattern>
        <url-pattern>/buscar-tabla</url-pattern>  
        <url-pattern>/eliminar-tabla</url-pattern>       
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
